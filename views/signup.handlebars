<div class="card">
    <div class="card-header">Sign Up</div>
    <div class="card-body">
        <form action="">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="name-signup" placeholder="e.g. bobsmith" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email-signup" placeholder="e.g. bobsmith@gmail.com"
                    required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password-signup" placeholder="*******" required>
            </div>
            <button type="submit" class="btn btn-success signup-form">Sign Up</button>
        </form>
    </div>
</div>